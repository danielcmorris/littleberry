{  "compileOnSave": true,
  "compilerOptions": {
    "target": "es5",
    "module": "system",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outFile": "js/tsc.js",
    "sourceMap": true
  },

    "include": [
        "app/**/*"
    ],
  "exclude": [
    "components",
    "node_modules",
    "bower_components",
    "js",
    "custom_services"
  ]
}